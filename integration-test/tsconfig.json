{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": false,

        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "build",

        "paths": {
            "$lib": ["./src"],
            "$lib/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "build"]
}
